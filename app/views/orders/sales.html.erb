<div class="row">
  <%= render 'shared/title', title: "My Orders" %>

  <table class="table table-striped table-bordered table-hover" id="order-table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Item</th>
        <th>Price</th>
        <th>Customer</th>
        <th>Date Sold</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @order.each do |order| %>
        <tr>
          <td><%= link_to image_tag(order.listing.image.url(:thumb)), order.listing %></td>
          <td><%= order.listing.name %></td>
          <td><%= number_to_currency(order.listing.price) %></td>
          <td><%= order.buyer.name %></td>
          <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
          <td>

            <%= link_to order.listing do %>
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            <% end %>

            <%= link_to "" do %>
                 <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            <% end %>

            <%= link_to "", method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %>

          </td>
        </tr>
      <% end %>

    </tbody>
  </table>

</div>


