<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-lg-3 col-md-4 col-sm-6 ">
      <div class="thumbnail"> 
        <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption text-center">
               <h3><%= link_to listing.name, listing %></h3>
              
               <%= number_to_currency(listing.price) %>
                / By <%= listing.user.name %>
       
               <br/>
               <% if user_signed_in? and current_user == listing.user %>
                 <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
                 <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-link" %>
               <% end %>

          </div>
        </div>
    </div>
  <% end %>

</div>


