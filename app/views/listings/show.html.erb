<div class="row">
    <div class="col-md-6">
            <div class="thumbnail"> <%= image_tag @listing.image.url %></div>   
    </div>
    
    <div class="col-md-6">
       <h2> <%= @listing.name %></h2>
        <p> <%= number_to_currency(@listing.price) %></p>
        <p>Sold by: <%= @listing.user.name %></p>
       <p> <%= @listing.description %></p>
        <br/>
       <p class="pull-right"> <%= link_to "Buy Now", new_listing_order_path(@listing), class:"btn btn-success" %></p>
    </div>
</div>

<% if current_user == @listing.user %>
    <%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
<% end %>

<%= link_to 'Back', listings_path, class: "btn btn-link" %>
