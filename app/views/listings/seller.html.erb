<div class="row">
  <%= render 'shared/title', title: "Listings" %>
  <table class="table table-striped table-bordered table-hover" id="listings-table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @listings.each do |listing| %>
        <tr>
          <td><%= link_to image_tag(listing.image.url(:thumb)), listing %></td>
          <td><%= listing.name %></td>
          <td><%= truncate(listing.description, length:200) { link_to "Continue", listing }  %></td>
          <td><%= listing.price %></td>
          <td>

            <%= link_to listing do %>
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            <% end %>

            <%= link_to edit_listing_path(listing) do %>
                 <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            <% end %>

            <%= link_to listing, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %>

          </td>
        </tr>
      <% end %>

    </tbody>
  </table>

</div>


